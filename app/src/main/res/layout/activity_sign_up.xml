<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header dan Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:src="@android:drawable/ic_menu_revert"
                app:tint="@color/black"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Back Button"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up to Yuk, Healing!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="please sign up to continue Yuk, Healing!"
            android:textSize="14sp"
            android:textColor="@color/gray_text"
            android:layout_marginBottom="48dp" />

        <!-- Name -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:autofillHints="name"
            android:background="@drawable/rounded_edittext_bg"
            android:paddingHorizontal="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:importantForAutofill="yes" />

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="your@email.com"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            android:background="@drawable/rounded_edittext_bg"
            android:paddingHorizontal="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:importantForAutofill="yes" />

        <!-- Password -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:autofillHints="newPassword"
            android:background="@drawable/rounded_edittext_bg"
            android:paddingHorizontal="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:importantForAutofill="yes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password must be at least 8 characters"
            android:textColor="@color/gray_text"
            android:textSize="12sp"
            android:layout_marginBottom="32dp" />

        <!-- Register Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Sign up now"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            android:backgroundTint="@color/green_primary"
            android:textColor="@color/white"
            android:contentDescription="Register Account Button"
            android:layout_marginBottom="24dp" />

        <!-- Already have an account -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="@color/gray_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:textColor="@color/green_primary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="4dp"
                android:contentDescription="Go to Login" />
        </LinearLayout>

        <!-- Or Connect -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or connect"
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>
